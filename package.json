{
  "name": "restful-api-typescript-starter",
  "description": "Node RESTful API using Express and TS",
  "version": "1.0.0",
  "main": "server.js",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BCIT-DDC/node-ts-restful-api-starter"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "prisma": {
    "seed": "ts-node ./src/prisma/db.seed.ts"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/",
    "copy-files": "ts-node scripts/copy-files.script.ts",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn -- src/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "postinstall": "npm run prisma:generate",
    "postbuild": "npm run copy-files",
    "prisma:init": "prisma init",
    "prisma:migrate": "prisma migrate dev --name init --schema ./src/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema ./src/prisma/schema.prisma",
    "prisma:seed": "prisma db seed",
    "serve-debug": "nodemon --inspect dist/src/server.js",
    "serve": "cross-env NODE_ENV=production node dist/src/server.js",
    "start": "npm run serve",
    "test": "cross-env NODE_ENV=test jest -i --colors --verbose --coverage --detectOpenHandles",
    "test:watch": "npm run test -- --watchAll",
    "watch-node": "nodemon dist/src/server.js",
    "watch-ts": "tsc -w"
  },
  "keywords": [
    "Nodejs",
    "Typescript",
    "RESTful API",
    "Express"
  ],
  "author": "Jamie Samuel",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^3.2.1",
    "@types/eslint": "^7.28.1",
    "@types/express": "^4.17.13",
    "@types/shelljs": "^0.8.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "prettier": "^2.4.1",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/jest": "^27.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.4",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^6.3.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "prisma": "^3.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  }
}
